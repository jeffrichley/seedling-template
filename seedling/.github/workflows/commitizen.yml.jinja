name: Commitizen bump

on:
  push:
    branches: [main]

jobs:
  bump:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Commitizen Bump
        uses: commitizen-tools/commitizen-action@v1
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
