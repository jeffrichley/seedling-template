name: Documentation

on:
  # Build + publish rendered docs whenever main changes
  push:
    branches: [main]
    paths:
      - "docs/**"
      - "pyproject.toml"
      - "src/**"

  # Allow manual rebuilds
  workflow_dispatch: {}

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build-deploy-docs:
    runs-on: ubuntu-latest

    steps:
      # ─── 1️⃣ Checkout ----------------------------------------------------------------
      - uses: actions/checkout@v4

      # ─── 2️⃣ Install the same interpreter you test with ------------------------------
      - uses: actions/setup-python@v5
        with:
          python-version: "{{ python_versions.split(',')[0].strip() }}"
          cache: "pip"

      # ─── 3️⃣ Install uv + nox --------------------------------------------------------
      - run: |
          python -m pip install --quiet uv
          uv pip install --system --quiet 'nox>=2024.4.15'

      # ─── 4️⃣ Build docs via the existing nox session ---------------------------------
      - name: Build Sphinx HTML
        run: nox --sessions docs

      # ─── 5️⃣ Deploy to GitHub Pages via peaceiris/actions-gh-pages ------------------
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v1
        if: github.ref == 'refs/heads/main'
        with:
          github_token: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
          publish_dir: ./docs/build
